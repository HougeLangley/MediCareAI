FROM node:18-alpine

WORKDIR /app

# 复制 package 文件
COPY package.json package-lock.json* ./

# 安装依赖
RUN npm install --legacy-peer-deps --no-optional --force

# 复制源代码
COPY . .

# 创建简单的静态服务器配置
RUN mkdir -p /app/build && \
    echo "<h1>MediCare AI - 正在启动...</h1>" > /app/build/index.html

# 暴露端口
EXPOSE 3000

# 启动应用
CMD ["npm", "start"]
